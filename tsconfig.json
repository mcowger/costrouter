{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "#types/*": ["./types/src/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "files": [],
  "references": [
    { "path": "./types" },
    { "path": "./server" }
  ]
}